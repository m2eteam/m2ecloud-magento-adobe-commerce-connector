<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <m2epayment>
                <active>1</active>
                <model>M2E\M2ECloudMagentoConnector\Model\Magento\Payment</model>
                <order_status>pending</order_status>
                <title>M2E Cloud Payment</title>
                <allowspecific>0</allowspecific>
                <sort_order>1</sort_order>
            </m2epayment>
        </payment>

        <carriers>
            <m2eshipping>
                <active>1</active>
                <allowed_methods>m2eshipping</allowed_methods>
                <methods>m2eshipping</methods>
                <sallowspecific>0</sallowspecific>
                <model>M2E\M2ECloudMagentoConnector\Model\Magento\Shipping</model>
                <name>M2E Cloud Shipping</name>
                <title>M2E Cloud Shipping</title>
                <handling_type>F</handling_type>
            </m2eshipping>
        </carriers>
    </default>
</config>
