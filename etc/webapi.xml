<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/m2ecloud/inventories" method="GET">
        <service class="M2E\M2ECloudMagentoConnector\Api\InventoryRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="M2E_M2ECloudMagentoConnector::inventories"/>
        </resources>
    </route>
    <route url="/V1/m2ecloud/inventories/:sku" method="GET">
        <service class="M2E\M2ECloudMagentoConnector\Api\InventoryRepositoryInterface" method="get"/>
        <resources>
            <resource ref="M2E_M2ECloudMagentoConnector::inventories" />
        </resources>
    </route>

    <route url="/V1/m2ecloud/order" method="POST">
        <service class="M2E\M2ECloudMagentoConnector\Api\OrderManagementInterface" method="createOrder"/>
        <resources>
            <resource ref="M2E_M2ECloudMagentoConnector::create_order"/>
        </resources>
    </route>

    <route url="/V1/m2ecloud/info" method="GET">
        <service class="\M2E\M2ECloudMagentoConnector\Api\ModuleInfoInterface" method="getInfo"/>
        <resources>
            <resource ref="M2E_M2ECloudMagentoConnector::module_info"/>
        </resources>
    </route>
</routes>
